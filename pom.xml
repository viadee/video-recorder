  <repositories>
    <repository>
      <id>jenkins</id>
      <name>Jenkins Repository (releases)</name>
      <url>http://repo.jenkins-ci.org/releases/</url>
    </repository>
  </repositories>
  <distributionManagement>
    <repository>
      <id>releases</id>
      <name>Releases</name>
      <url>https://github.com/viadee/video-recorder</url>
    </repository>

    <snapshotRepository>
